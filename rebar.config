%% -*- mode: erlang;erlang-indent-level: 2;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

%% == Erlang Compiler ==

%% Erlang compiler options
{erl_opts, [ warn_unused_vars
           , warn_export_all
           , warn_shadow_vars
           , warn_unused_import
           , warn_unused_function
           , warn_bif_clash
           , warn_unused_record
           , warn_deprecated_function
           , warn_obsolete_guard
           , strict_validation
           , warn_export_vars
           , warn_exported_vars
%%         , warn_missing_spec
           , warn_untyped_record
           , debug_info]}.

{deps, [
        {mixer,            "0.1.5",    {pkg, inaka_mixer}},
        {cowboy_swagger,   ".*",       {git, "https://github.com/inaka/cowboy_swagger.git", "master"}},
        {lager,            ".*",       {git, "https://github.com/basho/lager.git", "master"}}
      ]}.


{relx, [{release, {person_api, "0.1.0"},
         [person_api,
          sasl]},

       {sys_config, "./config/sys.config"},
       {vm_args,    "./config/vm.args"   },
       {overlay, [
                  {copy, "./_build/default/lib/cowboy_swagger/priv/swagger", "priv/swagger"},
                  {copy, "priv/extra/swagger-ui.js",     "priv/swagger/"},
                  {copy, "priv/extra/swagger-ui.min.js", "priv/swagger/"}
                  ]},
       {dev_mode, true},
       {include_erts, false},
       % {exclude_modules, [
       %     {rabbit_common, [mochijson2]}
       % ]},
       {extended_start_script, true}
    ]
}.

